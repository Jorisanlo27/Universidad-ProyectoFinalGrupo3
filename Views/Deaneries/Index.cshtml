@model IEnumerable<Universidad.Models.Departamento>

@{
    ViewData["Title"] = "Index";
    int i = 1;
}
@foreach (var departamento in Model)
{
    <div class="">
        <h2 class="text-center fw-bold">@departamento.Nombre</h2>
        <div class="d-flex justify-content-between align-items-baseline">

            @foreach (var area in departamento.Areas)
            {
                var pind = (100 / departamento.Areas.Count());
                var cp = pind - (pind / departamento.Areas.Count());

                if (cp != 0)
                {
                    <div style="width: @cp%; margin: 0 auto;">
                        <!-- Table with stripped rows -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col" class="card-title text-center" colspan="1">@area.Nombre</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var career in area.Carreras)
                                {
                                    <tr>
                                        <td>
                                            @career.Nombre
                                        </td>
                                        <td class="align-middle">
                                            <a asp-action="Details" asp-route-id="@career.IdCarrera"><i class="bi bi-info-circle"></i></a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                                @{
                                    i = 1;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div style="width: 25%; margin: 0 auto;">
                        <h5 class="card-title text-center">@area.Nombre</h5>

                        <!-- Table with stripped rows -->
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Careers</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var career in area.Carreras)
                                {
                                    <tr>
                                        <td>
                                            @career.Nombre
                                        </td>
                                        <td class="align-middle">
                                            <a asp-action="Details" asp-route-id="@career.IdCarrera"><i class="bi bi-info-circle"></i></a>
                                        </td>
                                    </tr>
                                    i++;
                                }
                                @{
                                    i = 1;
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
        </div>
    </div>
    <hr></hr>
}