@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		<li class="nav-item dropdown pe-3">

			<a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
				<img src="~/img/profile-img.jpg" alt="Profile" class="rounded-circle">
				<span class="d-none d-md-block dropdown-toggle ps-2">@User.Identity.Name</span>
			</a>

			<ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
				<li class="dropdown-header">
					<h6>@User.Identity?.Name</h6>
					@if (User.IsInRole("Admin"))
					{
						<span>Admin</span>
					}
					else if (User.IsInRole("Teacher"))
					{
						<span>Teacher</span>
					}
					else if (User.IsInRole("Student"))
					{
						<span>Student</span>
					}
				</li>
				<li>
					<hr class="dropdown-divider">
				</li>

				<li>
					<a class="dropdown-item d-flex align-items-center" href="/Identity/Account/Manage">
						<i class="bi bi-gear"></i>
						<span>Account Settings</span>
					</a>
				</li>
				<li>
					<hr class="dropdown-divider">
				</li>

				<li>
					<a class="dropdown-item d-flex align-items-center" href="/Home/FAQ">
						<i class="bi bi-question-circle"></i>
						<span>Need Help?</span>
					</a>
				</li>
				<li>
					<hr class="dropdown-divider">
				</li>

				<li class="nav-item">
					<form class="form-inline" role="button" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
						<a class="dropdown-item d-flex align-items-center" onclick="this.parentNode.submit()">
							<i class="bi bi-box-arrow-right"></i>
							<span>Sign Out</span>
						</a>
					</form>
				</li>

				<li>

				</li>

			</ul>
		</li>
	}
	else
	{
		<li class="nav-item me-5">
			<a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
