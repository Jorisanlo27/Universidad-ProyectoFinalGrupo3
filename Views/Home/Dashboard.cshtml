@{
    ViewData["Title"] = "Home Page";
}

<div class="pagetitle">
    <h1>Dashboard</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
    <div class="row">

        <!-- Left side columns -->
        <div class="col-12">
            <div class="row">

                <!-- Teachers Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card sales-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Teachers <span>| Amounts</span></h5>
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ps-3">
                                    <h6 id="ProfesoresCount">0</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End Teachers Card -->
                <!-- Students Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card revenue-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Students <span>| Amount</span></h5>
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ps-3">
                                    <h6 id="EstudiantesCount">0</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End Students Card -->
                <!-- Falculties Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card customers-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Faculties <span>| Amount</span></h5>
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div class="ps-3">
                                    <h6 id="AreasCount">0</h6>
                                </div>
                            </div>
                        </div>
                    </div>

                </div><!-- End Falculties Card -->
                <!-- Career Card -->
                <div class="col-xxl-3 col-md-6">
                    <div class="card info-card customers-card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Career <span>| Amount</span></h5>
                            <div class="d-flex align-items-center justify-content-center">
                                <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                                    <i class="bi bi-book"></i>
                                </div>
                                <div class="ps-3">
                                    <h6 id="CarrerasCount">0</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- End Career Card -->

                <div class="col-xxl-6 col-sm-12">
                    <div class="card">
                        <div class="card-body pb-0">
                            <h5 class="card-title text-center">Vertical Bar Chart</h5>

                            <!-- Vertical Bar Chart -->
                            <div id="verticalBarChart" style="min-height: 400px;" class="echart"></div>

                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                    echarts.init(document.querySelector("#verticalBarChart")).setOption({
                                        tooltip: {
                                            trigger: 'axis',
                                            axisPointer: {
                                                type: 'shadow'
                                            }
                                        },
                                        legend: {
                                            orient: 'horizontal',
                                            left: 'center',
                                            data: ['Teachers', 'Students']
                                        },
                                        grid: {
                                            left: '3%',
                                            right: '4%',
                                            bottom: '3%',
                                            containLabel: true
                                        },
                                        xAxis: {
                                            type: 'value',
                                            boundaryGap: [0, 0.01]
                                        },
                                        yAxis: {
                                            type: 'category',
                                            data: ['STD', 'LAW', 'ART', 'ING', 'ECM']
                                        },
                                        series: [{
                                            name: 'Teachers',
                                            type: 'bar',
                                            data: [8, 13, 32, 43, 27]
                                        },
                                        {
                                            name: 'Students',
                                            type: 'bar',
                                            data: [53, 94, 310, 261, 134]
                                        }
                                        ]
                                    });
                                });
                            </script>
                            <!-- End Vertical Bar Chart -->

                        </div>
                    </div>
                </div>

                <!-- Pie -->
                <div class="col-xxl-6 col-sm-12">
                    <div class="card">
                        <div class="card-body pb-0">
                            <h5 class="card-title text-center">Career <span>| by Students</span></h5>

                            <!-- Pie Chart -->
                            <div id="pieChart" style="min-height: 400px;" class="echart"></div>

                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                    echarts.init(document.querySelector("#pieChart")).setOption({
                                        tooltip: {
                                            trigger: 'item'
                                        },
                                        legend: {
                                            orient: 'horizontal',
                                            left: 'center'
                                        },
                                        series: [{
                                            name: 'Access From',
                                            type: 'pie',
                                            radius: '50%',
                                            data: [{
                                                value: 1048,
                                                name: 'Search Engine'
                                            },
                                            {
                                                value: 735,
                                                name: 'Direct'
                                            },
                                            {
                                                value: 580,
                                                name: 'Email'
                                            },
                                            {
                                                value: 484,
                                                name: 'Union Ads'
                                            },
                                            {
                                                value: 300,
                                                name: 'Video Ads'
                                            }
                                            ],
                                            emphasis: {
                                                itemStyle: {
                                                    shadowBlur: 10,
                                                    shadowOffsetX: 0,
                                                    shadowColor: 'rgba(0, 0, 0, 0.5)'
                                                }
                                            }
                                        }]
                                    });
                                });
                            </script>
                            <!-- End Pie Chart -->
                        </div>
                    </div>
                </div><!-- End Pie -->
                <!-- Reports -->
                <div class="col-12">
                    <div class="card">
                        <div class="card-body text-center">
                            <h5 class="card-title">Reports <span>/ Semester</span></h5>

                            <!-- Line Chart -->
                            <div id="reportsChart"></div>

                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                    new ApexCharts(document.querySelector("#reportsChart"), {
                                        series: [{
                                            name: 'Teacher',
                                            data: [31, 40, 28, 51, 42, 82, 56],
                                        }, {
                                            name: 'Students',
                                            data: [11, 32, 45, 32, 34, 52, 41]
                                        }, {
                                            name: 'Faculties',
                                            data: [15, 11, 32, 18, 9, 24, 11]
                                        }],
                                        chart: {
                                            height: 350,
                                            type: 'area',
                                            toolbar: {
                                                show: false
                                            },
                                        },
                                        markers: {
                                            size: 4
                                        },
                                        colors: ['#4154f1', '#2eca6a', '#ff771d'],
                                        fill: {
                                            type: "gradient",
                                            gradient: {
                                                shadeIntensity: 1,
                                                opacityFrom: 0.3,
                                                opacityTo: 0.4,
                                                stops: [0, 90, 100]
                                            }
                                        },
                                        dataLabels: {
                                            enabled: false
                                        },
                                        stroke: {
                                            curve: 'smooth',
                                            width: 2
                                        },
                                        xaxis: {
                                            type: 'datetime',
                                            categories: ["2018-09-19T00:00:00.000Z", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z", "2018-09-19T06:30:00.000Z"]
                                        },
                                        tooltip: {
                                            x: {
                                                format: 'dd/MM/yy HH:mm'
                                            },
                                        }
                                    }).render();
                                });
                            </script>
                            <!-- End Line Chart -->

                        </div>

                    </div>
                </div><!-- End Reports -->
                <!-- Recent Sales -->
                <div class="col-12">
                    <div class="card recent-sales overflow-auto">

                        <div class="filter">
                            <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                                <li class="dropdown-header text-start">
                                    <h6>Filter</h6>
                                </li>

                                <li><a class="dropdown-item" href="#">Today</a></li>
                                <li><a class="dropdown-item" href="#">This Month</a></li>
                                <li><a class="dropdown-item" href="#">This Year</a></li>
                            </ul>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title">Requested Events</h5>

                            <table class="table table-borderless datatable">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Faculties</th>
                                        <th scope="col">Event</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row"><a href="#">#2457</a></th>
                                        <td>Economic and Business Sciences</td>
                                        <td><a href="#" class="text-primary">Math competition</a></td>
                                        <td>$64</td>
                                        <td><span class="badge bg-success">Approved</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#2147</a></th>
                                        <td>Enginnering and Computer Science</td>
                                        <td><a href="#" class="text-primary">Talk about technology and its current operation</a></td>
                                        <td>$47</td>
                                        <td><span class="badge bg-warning">Pending</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#2049</a></th>
                                        <td>General Studies</td>
                                        <td><a href="#" class="text-primary">competition language</a></td>
                                        <td>$147</td>
                                        <td><span class="badge bg-danger">Rejected</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#2644</a></th>
                                        <td>Art and Comunication</td>
                                        <td><a href="#" class="text-primar">Talk about the impact that art has today</a></td>
                                        <td>$67</td>
                                        <td><span class="badge bg-success">Approved</span></td>
                                    </tr>
                                    <tr>
                                        <th scope="row"><a href="#">#2644</a></th>
                                        <td>Law</td>
                                        <td><a href="#" class="text-primary">court practice essay</a></td>
                                        <td>$165</td>
                                        <td><span class="badge bg-success">Approved</span></td>
                                    </tr>
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div><!-- End Recent Sales -->
            </div>
        </div><!-- End Left side columns -->
    </div>
</section>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    var il;
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetProfesores")',
            type: 'GET',
            dataType: 'json',
            success: function (result) {
                $('#ProfesoresCount').text(result);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
        $.ajax({
            url: '@Url.Action("GetEstudiantes")',
            type: 'GET',
            dataType: 'json',
            success: function (result) {
                $('#EstudiantesCount').text(result);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
        $.ajax({
            url: '@Url.Action("GetAreas")',
            type: 'GET',
            dataType: 'json',
            success: function (result) {
                $('#AreasCount').text(result);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
        $.ajax({
            url: '@Url.Action("GetCarreras")',
            type: 'GET',
            dataType: 'json',
            success: function (result) {
                $('#CarrerasCount').text(result);
            },
            error: function (xhr, status, error) {
                console.log(error);
            }
        });
    });
</script>