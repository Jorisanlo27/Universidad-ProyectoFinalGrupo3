								</div>
								<div class="ps-3">
									<h6>0</h6>
								</div>
							</div>
						</div>
					</div>
				</div><!-- End Teachers Card -->
				<!-- Students Card -->
				<div class="col-xxl-3 col-md-6">
					<div class="card info-card revenue-card">
						<div class="card-body text-center">
							<h5 class="card-title">Students <span>| Amount</span></h5>
							<div class="d-flex align-items-center justify-content-center">
								<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
									<i class="bi bi-people"></i>
								</div>
								<div class="ps-3">
									<h6>0</h6>
								</div>
							</div>
						</div>
					</div>
				</div><!-- End Students Card -->
				<!-- Falculties Card -->
				<div class="col-xxl-3 col-md-6">
					<div class="card info-card customers-card">
						<div class="card-body text-center">
							<h5 class="card-title">Faculties <span>| Amount</span></h5>
							<div class="d-flex align-items-center justify-content-center">
								<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
									<i class="bi bi-building"></i>
								</div>
								<div class="ps-3">
									<h6>0</h6>
								</div>
							</div>
						</div>
					</div>

				</div><!-- End Falculties Card -->
				<!-- Career Card -->
				<div class="col-xxl-3 col-md-6">
					<div class="card info-card customers-card">
						<div class="card-body text-center">
							<h5 class="card-title">Career <span>| Amount</span></h5>
							<div class="d-flex align-items-center justify-content-center">
								<div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
									<i class="bi bi-book"></i>
								</div>
								<div class="ps-3">
									<h6>0</h6>
								</div>
							</div>
						</div>
					</div>
				</div><!-- End Career Card -->

				<!-- Reports -->
				<!-- Radar -->
				<div class="col-xxl-6 col-sm-12">
					<div class="card">
						<div class="card-body pb-0">
							<h5 class="card-title text-center">Report <span>| by Faculties</span></h5>
							<!-- Radar Chart -->
							<div id="radarChart" style="min-height: 400px;" class="echart"></div>

							<script>
								document.addEventListener("DOMContentLoaded", () => {
									echarts.init(document.querySelector("#radarChart")).setOption({
										legend: {
											orient: 'vertical',
											left: 'left',
											data: ['Teachers', 'Students']
										},
										radar: {
											indicator: [{
												name: 'ECM',
												max: 6500
											},
											{
												name: 'ING',
												max: 16000
											},
											{
												name: 'LAW',
												max: 30000
											},
											{
												name: 'ART',
												max: 38000
											},
											{
												name: 'STD',
												max: 52000
											}]
										},
										series: [{
											name: 'Budget vs spending',
											type: 'radar',
											data: [{
												value: [4200, 3000, 20000, 35000, 50000, 18000],
												name: 'Teachers'
											},
											{
												value: [5000, 14000, 28000, 26000, 42000, 21000],
												name: 'Students'
											}
											]
										}]
									});
								});
							</script><!-- End Radar Chart -->
						</div>
					</div>
				</div><!-- End Radar -->
				<!-- Pie -->
				<div class="col-xxl-6 col-sm-12">
					<div class="card">
						<div class="card-body pb-0">
							<h5 class="card-title text-center">Career <span>| by Students</span></h5>

							<!-- Pie Chart -->
							<div id="pieChart" style="min-height: 400px;" class="echart"></div>

							<script>
								document.addEventListener("DOMContentLoaded", () => {
									echarts.init(document.querySelector("#pieChart")).setOption({
										tooltip: {
											trigger: 'item'
										},
										legend: {
											orient: 'horizontal',
											left: 'center'
										},
										series: [{
											name: 'Access From',
											type: 'pie',
											radius: '50%',
											data: [{
												value: 1048,
												name: 'Search Engine'
											},
											{
												value: 735,
												name: 'Direct'
											},
											{
												value: 580,
												name: 'Email'
											},
											{
												value: 484,
												name: 'Union Ads'
											},
											{
												value: 300,
												name: 'Video Ads'
											}
											],
											emphasis: {
												itemStyle: {
													shadowBlur: 10,
													shadowOffsetX: 0,
													shadowColor: 'rgba(0, 0, 0, 0.5)'
												}
											}
										}]
									});
								});
							</script>
							<!-- End Pie Chart -->
						</div>
					</div>
				</div><!-- End Pie -->
				
				<div class="col-12">
					<div class="card">
						<div class="card-body text-center">
							<h5 class="card-title">Reports <span>/ Semester</span></h5>

							<!-- Line Chart -->
							<div id="reportsChart"></div>

							<script>
								document.addEventListener("DOMContentLoaded", () => {
									new ApexCharts(document.querySelector("#reportsChart"), {
										series: [{
											name: 'Teacher',
											data: [31, 40, 28, 51, 42, 82, 56],
										}, {
											name: 'Students',
											data: [11, 32, 45, 32, 34, 52, 41]
										}, {
											name: 'Faculties',
											data: [15, 11, 32, 18, 9, 24, 11]
										}],
										chart: {
											height: 350,
											type: 'area',
											toolbar: {
												show: false
											},
										},
										markers: {
											size: 4
										},
										colors: ['#4154f1', '#2eca6a', '#ff771d'],
										fill: {
											type: "gradient",
											gradient: {
												shadeIntensity: 1,
												opacityFrom: 0.3,
												opacityTo: 0.4,
												stops: [0, 90, 100]
											}
										},
										dataLabels: {
											enabled: false
										},
										stroke: {
											curve: 'smooth',
											width: 2
										},
										xaxis: {
											type: 'datetime',
											categories: ["2018-09-19T00:00:00.000Z", "2018-09-19T01:30:00.000Z", "2018-09-19T02:30:00.000Z", "2018-09-19T03:30:00.000Z", "2018-09-19T04:30:00.000Z", "2018-09-19T05:30:00.000Z", "2018-09-19T06:30:00.000Z"]
										},
										tooltip: {
											x: {
												format: 'dd/MM/yy HH:mm'
											},
										}
									}).render();
								});
							</script>
							<!-- End Line Chart -->

						</div>

					</div>
				</div><!-- End Reports -->
				<!-- Recent Sales -->
