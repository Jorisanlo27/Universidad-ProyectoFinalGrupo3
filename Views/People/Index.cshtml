@model IEnumerable<Universidad.Models.Persona>

@{
    ViewData["Title"] = "Index";
}

<style>
    th, td {
        white-space: nowrap;
    }

    div.dataTables_wrapper {
        margin: 0 auto;
    }
</style>

<div class="pagetitle d-flex justify-content-between">
    <div>
        <h1>Personas</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item">People</li>
            </ol>
        </nav>
    </div>

    <div class="d-flex align-items-center">
        <button type="button" class="btn btn-outline-primary h-50">
            <a class="text-decoration-none" asp-action="Create">Create New</a>
        </button>
    </div>

</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <!-- Table with stripped rows -->
                    <table class="table datatable" id="example" style="width:100%">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Matricula)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Nombre) y @Html.DisplayNameFor(model => model.Apellido)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.Correo)
                                </th>
                                <th scope="col">
                                    @Html.DisplayNameFor(model => model.NumCelular)
                                </th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 1;}
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@i</th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Matricula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Correo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NumCelular)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.IdPersona">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.IdPersona">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.IdPersona">Delete</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        var table = $('#example').removeAttr('width').DataTable({
            scrollY: "300px",
            scrollX: true,
            scrollCollapse: true,
            paging: false,
            columnDefs: [
                { width: 200, targets: 0 }
            ],
            fixedColumns: true
        });
    });
</script>